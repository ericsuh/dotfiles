{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".git/"],
            "filetypes": ["go"]
        },
        "javascript": {
            "command": "tsserver",
            "rootPatterns": ["package.json", ".git/"],
            "filetypes": ["js", "jsx"]
        },
        "typescript": {
            "command": "tsserver",
            "rootPatterns": ["package.json", ".git/"],
            "filetypes": ["ts", "tsx"]
        }
    },
    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.jumpCommand": "edit",
    "coc.preferences.formatOnSaveFiletypes": ["json", "javascript", "typescript", "go", "python"],
    "typescript.formatting.provider": "prettier",
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "tsserver.useLocalTsdk": true,
    "python.venvFolders": [".venvs", ".venvs/py39"],
    "python.formatting.provider": "black"
}
