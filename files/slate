config defaultToCurrentScreen true

bind left:ctrl,cmd corner top-left resize:screenSizeX/2;screenSizeY
bind right:ctrl,cmd corner top-right resize:screenSizeX/2;screenSizeY
bind up:ctrl,cmd corner top-left resize:screenSizeX;screenSizeY

# Bring up the grid
bind down:ctrl,cmd grid padding:5 1:6,3

bind left:ctrl,cmd,alt corner top-left resize:windowSizeX-100;screenSizeY
bind right:ctrl,cmd,alt corner top-right resize:windowSizeX-100;screenSizeY
bind up:ctrl,cmd,alt corner top-left resize:screenSizeX;windowSizeY-100
bind down:ctrl,cmd,alt corner bottom-left resize:screenSizeX;windowSizeY-100
